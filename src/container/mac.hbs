<div class="m-5">
    <h1>{{name}}</h1>
    <h2>{{description}}</h2>
    <p> <button type="button" class="btn btn-danger">price:</button>
        <button type="button" class="btn btn-danger">{{price}}</button>
    </p>
    <p>
        <button type="button" class="btn btn-danger">category:</button>
        <button type="button" class="btn btn-danger">{{category}}</button>
    </p>

    <div>
        {{#with features}}
        <h3>processor</h3>
        {{#with processor}}
        <p> brand: {{brand}}</p>
        <p> model: {{model}}</p>
        <p> speed: {{speed}}</p>
        <p> cores: {{cores}}</p>
        <p>cache: {{cache}}</p>
        {{/with}}

        
        <h3 class="mt-3">memory</h3>
        {{#with memory}}
        <p>type: {{type}}</p>
        <p>size: {{size}}</p>
        <p>speed: {{speed}}</p>
        {{/with}}

       
        <h3 class="mt-3">storage</h3>
        {{#with storage}}
        <p>type: {{type}}</p>
        <p>size: {{size}}</p>
        {{/with}}

       
        <h3 class="mt-3">display</h3>
        {{#with display}}
        <p>size: {{size}}</p>
        <p>resolution: {{resolution}}</p>
        <p>technology: {{technology}}</p>
        <p>color space: {{color_space}}</p>
        <p>brightness: {{brightness}}</p>
        <p>refresh rate: {{refresh_rate}}</p>
        {{/with}}

        
        <h3 class="mt-3">graphics</h3>
        {{#with graphics}}
        <p>brand: {{brand}}</p>
        <p>model: {{model}}</p>
        <p>memory: {{memory}}</p>
        {{/with}}

        
        <h3 class="mt-3">ports</h3>
        <ul>
            {{#each ports}}
            <li>
                <p>type: {{type}}</p>
                <p>count: {{count}}</p>
                <ul>
                    {{#each features}}
                    <li> {{this}}</li>
                    {{/each}}
                </ul>
            </li>
            {{/each}}
        </ul>

       
        <h3 class="mt-3">battery</h3>
        {{#with battery}}
        <p>type: {{type}}</p>
        <p>capacity: {{capacity}}</p>
        <p>life: {{life}}</p>
        {{/with}}

        
        <h3 class="mt-3">weight</h3>
        <p>{{weight}}</p>

        
        <h3 class="mt-3"> dimensions</h3>
        {{#with dimensions}}
        <p>height: {{height}}</p>
        <p>width: {{width}}</p>
        <p>depth: {{depth}}</p>
        {{/with}}

        
        <h3 class="mt-3">operating system</h3>
        <p>{{operating_system}}</p>

       
        <h3 class="mt-3">accessories</h3>
        <ul>
            {{#each accessories}}
            <li>
                <p> name: {{name}}</p>
                <p> price: {{price}}</p>
            </li>
            {{/each}}
        </ul>
        {{/with}}
    </div>


</div>