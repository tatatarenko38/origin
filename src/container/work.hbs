{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<div class="m-5">
    {{#with main}}
    <main>
        <section>
            <div>
                {{> title data='Work history' big=true}}
            </div>
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div class="mx-3">{{position}}</div>

                        



                        <div class="mb-3">{{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (досі працюємо)
                            {{/if}}
                        </div>

                       

                        <div class="mb-5">
                            {{#with company}}
                            {{#if url}}
                            {{> link text=name href=url blank=true noLine=true}}
                            {{else}}
                            {{name}}
                            {{/if}}
                            {{/with}}

                        </div>

                       
                        <div class="mb-3">
                            <strong>Projects ({{projectAmount}})</strong>
                        </div>

                        

                        <div>

                            <ul>
                                {{#each projects}}
                                <li>

                                    {{> link text= name href=url blank=true noLine=true}}
                                    <br>
                                    <div>
                                        <p>{{about}}</p>
                                    </div>
                                    <br>
                                    <div>
                                        <em>“Project stacks” ({{stackAmoGnt}})</em>
                                    </div>
                                    <br>
                                    <div>
                                        {{#each stacks}}
                                        {{name}}
                                        <br>
                                        {{/each}}
                                    </div>
                                    <br>
                                    <div>
                                        <em>“Project awards”</em>
                                    </div>
                                    <br>
                                    <div>
                                        {{#each awards}}
                                        {{name}}
                                        <br>
                                        {{/each}}
                                    </div>


                                </li>

                                {{/each}}
                            </ul>
                        </div>


                    </li>
                    
                    {{/each}}
                </ul>
            </div>
        </section>

    </main>
    {{/with}}
</div>

{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}