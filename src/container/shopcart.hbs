<body class="m-5">
    {{#with navigation}}
    <div class="card mb-5">
        <div class="card-body">

            <div class="nav">

                <div class="nav-link">
                    {{#each links}}
                    <a href="href">{{text}}</a>
                    {{/each}}
                </div>
                <a href="href" class="nav-link disabled">Link</a>

            </div>
        </div>
    </div>
    {{/with}}

    <div>{{#with header}}
        <h1>{{title}}</h1>
        {{#with button}}
        <a href="link" class="btn btn-outline-secondary">{{text}}</a>
        {{/with}}
        {{/with}}
    </div>
    <hr class="my-5">
    <div class="row">
        {{#each goodsBlock}}
       {{> cartGoodsItem}}
        {{/each}}
    </div>

    <hr class="my-5">

    {{#with total}}
    <div>
        <h2>{{title}}</h2>
        <div class="display-3">{{amount}}</div>
        <p>{{delivery}}</p>
        {{#each buttons}}
        <div class="my-3">
            {{#if isSuccess}}
            <a href="{{link}}" type="button" class="btn btn-success">{{text}}</a>
            {{/if}}
            {{#if isOutline}}
            <a href="{{link}}" type="button" class="btn btn-outline-success">{{text}}</a>
            {{/if}}
        </div>
        {{/each}}
    </div>
    {{/with}}

    <hr class="my-5">

    <div class="row">
        {{#with goodsOtherBlock}}
        <h2 class="text-center">{{title}}</h2>
        {{#each cards}}
        <div class="card  col-4 p-2">
            <div class="card-body p-3">
                <img src="{{image}}" alt="" class="card-img-top p-0">
                <div class="card-title">
                    <h5>{{title}}</h5>
                    {{#if isHot}}
                    <span class="badge text-bg-warning rounded-pill text-uppercase">Hot!</span>
                    <span class="badge text-bg-primary rounded-pill ">Нове</span>
                    {{/if}}
                </div>
                <p>{{description}}</p>
            </div>
        </div>
        {{/each}}
        {{/with}}
    </div>

    <hr class="my-5">

    {{#with subscribe}}

    <div class="card text-bg-dark ps-3">
        <div class="card-heading">
            <h2 class="p-3">{{header}}</h2>

        </div>
        <div class="card-body">
            <p class="p-0">{{ description}}</p>

            {{#each buttons}}
            <div class="m-2">
                <a href="{{link}}" target="_blank" class="btn btn-primary">{{text}}</a>
            </div>


            {{/each}}
        </div>

    </div>
    {{/with}}

    <hr class="my-5">

    <footer>
        <div class="nav">
            {{#each footer}}
            <div class="nav-item col-2">
                {{#each this}}
                <a href="link" target="_blank" class="nav-link">{{text}}</a>

                {{/each}}
            </div>

            {{/each}}
        </div>

    </footer>
</body>