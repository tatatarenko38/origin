<div class="card mb-5">
    <div class="card-body">
        <div class="card mb-0">
            <div class="card-body">

                {{#with title}}
                <strong>{{ userName}}</strong>
                <p>{{caption}}</p>
                <p>{{date}}</p>
                {{/with}}
            </div>
        </div>

        {{#with reviewBody}}
        <div class="card">
            <div class="card-body">
                {{#with seller}}
                <p>{{title}}: {{value}}</p>
                {{/with}}
                {{#with rating}}
                <p>{{title}}: {{value}}</p>
                {{/with}}
                {{#each text}}
                <p>{{this}}</p>
                {{/each}}
                {{#with advantages}}
                <b>{{title}}</b>
                <p>{{text}}</p>
                {{/with}}
                {{#with disadvantages}}
                <b>{{title}}</b>
                <p>{{text}}</p>
                {{/with}}
                <div class="row">
                    {{#each images}}
                    <div class="col-2">
                        <img src="{{this}}" class="card-img">
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>

        <div>
            {{#each coments}}
            <div class="card ms-5 my-5">
                <div class="card-body">
                    <div class="card-title">
                        <h5>{{userName}}</h5>
                    </div>
                    <p>{{date}}</p>
                    <p>{{text}}</p>

                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>
</div>